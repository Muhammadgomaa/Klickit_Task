<body>
    <!-- Start Main Top -->
    <div class="main-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="text-align:center">
                    <div class="text-slid-box">
                        <div id="offer-box" class="carouselTicker">
                            <ul class="offer-box">
                                <li>
                                    <i class="fab fa-opencart"></i> Customizable Dashboard
                                </li>
                                <li>
                                    <i class="fab fa-opencart"></i> Diverse Payment Methods
                                </li>
                                <li>
                                    <i class="fab fa-opencart"></i> Seamless Integration
                                </li>
                                <li>
                                    <i class="fab fa-opencart"></i> Real Time Insights
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Main Top -->
    <!-- Start Main Top -->
    <header class="main-header">
        <!-- Start Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-default bootsnav">
            <div class="container">
                <!-- Start Header Navigation -->
                <div class="navbar-header">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-menu" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>
                    <a class="navbar-brand" href="~/Home/Home"><img src="~/Content/images/KlickitLogo.png" class="logo" alt=""></a>
                </div>
                <!-- End Header Navigation -->
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="navbar-menu">
                    <ul class="nav navbar-nav ml-auto" data-in="fadeInDown" data-out="fadeOutUp">
                        <li class="nav-item active"><a class="nav-link" href="~/Home/Home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/Home/About">About Us</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/Home/Contact">Contact Us</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/Home/Shop">Shop</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/Home/Orders">Orders</a></li>
                        <li class="dropdown">
                            <a href="" class="nav-link dropdown-toggle arrow" data-toggle="dropdown">SHOP CART</a>
                            <ul class="dropdown-menu">
                                @if (Session["cart"] != null)
                                {
                                    foreach (var item in (List<Items>)Session["cart"])
                                    {
                    <li><a href="@Url.Action("RemoveCart","Home",new { id = item.Product.Prod_ID })">@item.Product.Prod_Name (@item.Quantity) <i class="fa fa-times"></i> </a></li> }
                    <li><a>@Html.ActionLink("Shop Cart Details", "Checkout")</a></li>}
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="~/Home/Logout">Logout</a></li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
        </nav>
        <!-- End Navigation -->
    </header>
    <!-- End Main Top -->

    @RenderBody()

    <!-- Start Footer  -->
    <footer>
        <div class="footer-main">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-12 col-sm-12">
                        <div class="footer-top-box">
                            <h3>Business Time</h3>
                            <ul class="list-time">
                                <li>Sunday - Thursday: 10.00 am to 07.00 pm</li>
                                <li>Fridy - Saturday: <span>Closed</span></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12 col-sm-12">
                        <div class="footer-top-box">
                            <h3>Social Media</h3>
                            <p>Opinion Matter</p>
                            <ul>
                                <li><a href="~/Content/#"><i class="fab fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a href="~/Content/#"><i class="fab fa-twitter" aria-hidden="true"></i></a></li>
                                <li><a href="~/Content/#"><i class="fab fa-linkedin" aria-hidden="true"></i></a></li>
