
@{
    ViewBag.Title = "Accept Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<Klickit_Task.Models.Order> orders = ViewBag.Order;
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> Orders /</span>All Orders Accepted Details</h4>
        <!-- Basic Bootstrap Table -->
        <div class="card">
            <h5 class="card-header">Orders Details Table</h5>
            <div class="table-responsive text-nowrap">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>User Email</th>
                            <th>Product Name</th>
                            <th>Product Price</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @for (int i = 0; i < orders.Count; i++)
                        {
                        <tr>
                            <td>@orders[i].Order_ID</td>
                            <td><strong>@orders[i].User.User_Email</strong></td>
                            <td><strong>@orders[i].Product.Prod_Name</strong></td>
                            <td>@orders[i].Product.Prod_Price "L.E"</td>
                            <td>@orders[i].Date</td>
                            <td>@orders[i].Time</td>
                            <td><span class="badge bg-label-success me-1">Accept</span></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

