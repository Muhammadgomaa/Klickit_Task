@using Klickit_Task.Models;


@{
    ViewBag.Title = "Request Order";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    Product product = ViewBag.Prod;
    DateTime dateTime = DateTime.Now;
    string date = dateTime.ToString("dd-MM-yyyy");
    string time = dateTime.ToString("HH:mm");
    int Uid = int.Parse(Session["userid"].ToString());

}



<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>REQUEST ORDER</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Home/Home">Home</a></li>
                    <li class="breadcrumb-item active">Request Order</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <div class="row my-5">
            <div class="col-lg-6 col-sm-6">
                <div class="checkout-address">
                    <div class="title-left">
                        <h3>Order Information</h3>
                    </div>
                    <form class="needs-validation" id="form1" validate action="~/Home/ConfirmOrder">
                        <div class="row">
                            <div class="col-md-6 mb-3">

                                <input type="hidden" class="form-control" name="User_ID" value="@Uid">
                                <input type="hidden" class="form-control" name="Prod_ID" value="@product.Prod_ID">
                                <input type="hidden" class="form-control" name="Status" value="Pending">
                                <input type="hidden" class="form-control" name="Date" value="@date">
                                <input type="hidden" class="form-control" name="Time" value="@time">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="name">Product Name</label>
                            <input type="text" class="form-control" value="@product.Prod_Name" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="price">Product Price</label>
                            <input type="text" class="form-control" value="@product.Prod_Price" readonly>
                        </div>
                        <hr class="mb-1">
                        <div class="col-12 d-flex shopping-box">
                            <input type="submit" class="ml-auto btn hvr-hover" value="Place Order" style="color:white" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Cart -->
