
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    List<Klickit_Task.Models.Order> orders = ViewBag.Orders;
}

<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Orders</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Home/Home">Home</a></li>
                    <li class="breadcrumb-item active">Orders</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Start Orders  -->
<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Total Price</th>
                                <th>Order Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (orders.Count != 0)
                            {
                                for (int i = 0; i < orders.Count; i++)
                                {
                            <tr>
                                <td>@orders[i].Date</td>
                                <td>@orders[i].Time</td>
                                <td>@orders[i].Total</td>
                                    @if (orders[i].Status == "Pending")
                                    {
                                        <td>Pending</td>

                                    }
                                    @if (orders[i].Status == "Accept")
                                    {
                                        <td>Accept</td>

                                    }
                                    @if (orders[i].Status == "Reject")
                                    {
                                        <td>Reject</td>

                                    }
                                </tr>
                                }
                            }
                            else
                            {
                                <tr>No Orders Till Now Go To Shop!</tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Orders -->
